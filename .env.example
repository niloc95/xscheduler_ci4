#--------------------------------------------------------------------
# xScheduler Production Environment Configuration Template
#
# Copy this file to .env and configure the values for your server.
# Generate an encryption key with: php spark key:generate
#--------------------------------------------------------------------

#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------

# Set to 'production' for live sites, 'development' for local development
CI_ENVIRONMENT = production

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------

# Production: Leave empty for auto-detection or set your domain
app.baseURL = ''

# Force HTTPS in production (recommended)
app.forceGlobalSecureRequests = true

# Enable Content Security Policy for security
app.CSPEnabled = true

#--------------------------------------------------------------------
# DATABASE
#--------------------------------------------------------------------

# Production Database Configuration (MySQL/MariaDB)
database.default.hostname = localhost
database.default.database = xscheduler_prod
database.default.username = your_db_user
database.default.password = your_db_password
database.default.DBDriver = MySQLi
database.default.DBPrefix = xs_
database.default.port = 3306

# Alternative SQLite configuration for simple deployments
# database.default.hostname = 
# database.default.database = writable/database/xscheduler.db
# database.default.username = 
# database.default.password = 
# database.default.DBDriver = SQLite3
# database.default.DBPrefix = xs_

#--------------------------------------------------------------------
# ENCRYPTION
#--------------------------------------------------------------------

# Generate a 32-character encryption key for production
# You can use: php spark key:generate
encryption.key = your_32_character_encryption_key_here

#--------------------------------------------------------------------
# SESSION
#--------------------------------------------------------------------

# Session configuration for production
session.driver = 'CodeIgniter\Session\Handlers\FileHandler'
session.savePath = 'writable/session'
session.matchIP = true
session.timeToUpdate = 300
session.regenerateDestroy = true

#--------------------------------------------------------------------
# LOGGER
#--------------------------------------------------------------------

# Logger threshold for production (1=Emergency, 2=Alert, 3=Critical, 4=Error)
logger.threshold = 4

#--------------------------------------------------------------------
# SECURITY
#--------------------------------------------------------------------

# Security settings for production
security.CSRFProtection = true
security.CSRFTokenName = 'csrf_token'
security.CSRFCookieName = 'csrf_cookie'
security.CSRFExpire = 7200
security.CSRFRegenerate = true
security.CSRFSameSite = 'Strict'

#--------------------------------------------------------------------
# CACHE
#--------------------------------------------------------------------

# Cache configuration for production
cache.handler = 'file'
cache.storePath = 'writable/cache'

#--------------------------------------------------------------------
# EMAIL
#--------------------------------------------------------------------

# Email configuration for production notifications
# email.protocol = smtp
# email.SMTPHost = your-smtp-server.com
# email.SMTPUser = your-email@domain.com
# email.SMTPPass = your-email-password
# email.SMTPPort = 587
# email.SMTPCrypto = tls
# email.fromEmail = noreply@yourdomain.com
# email.fromName = xScheduler

#--------------------------------------------------------------------
# CUSTOM XSCHEDULER SETTINGS
#--------------------------------------------------------------------

# Application settings
app.timezone = 'UTC'
app.defaultLocale = 'en'
app.negotiateLocale = false
app.supportedLocales = ['en']

# Setup wizard settings
setup.enabled = true
setup.allowMultipleRuns = false

# Feature flags
features.emailNotifications = true
features.smsNotifications = false
features.multiLanguage = false
features.apiAccess = false